@model Green_Collector.Models.WasteModel

@{
    ViewBag.Title = "Waste";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="titluri_sectiuni">Tipuri Deșeuri</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div id="form_cl">
    <div class="form_deseuri">
        <div class="formd_titlu">
            <h3>Formular Adăugare Deșeuri</h3>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adaugă" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
